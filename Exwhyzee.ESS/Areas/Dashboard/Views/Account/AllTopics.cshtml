@model IEnumerable<Exwhyzee.ESS.Models.Entities.Topic>

@{
    ViewBag.Title = "AllTopics";
}



<div class="row">
    <div class="col-xs-12">
        <div class="box" style="padding:7px;">
            <div class="box-header" style="margin-bottom:15px;">
                <h3 class="box-title"><i class="fa fa-fw fa-file-text-o"></i> All Topics</h3>
                <h5>Not if your video has not been added. Kindly know that it is undergoing some reviews</h5>
              
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table id="example1" class="table table-bordered table-hover" border="1">

                    <thead>
                        <tr>
                            <th>S/N</th>
                            <th>
                                Class
                            </th>
                            <th>
                                Subject
                            </th>
                            <th>Topic</th>
                            <th>Uploaded By</th>
                            <th>Views</th>
                            <th>Comments</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int sno = 0;
                        }
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @{ sno++; }
                                @sno
                            </td>
                            <td>
                                @item.Subject.ClassLevel.Name
                            </td>
                            <td>
                                @item.Subject.Name
                            </td>
                            <td>
                                <a href="@Url.Action("VideoDetails", "Account", new { area = "Dashboard", id = item.Id })">
                                    @item.Title
                                </a> </td>
                            <td>Admin</td>
                            <td>@item.Views</td>
                            <td>0</td>

                        </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>




@section Style {

    <link rel="stylesheet" href="http://v1.exwhyzee.ng/admin/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">
}

@section Scripts {
    <!-- DataTables -->
    <script src="http://v1.exwhyzee.ng/admin/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="http://v1.exwhyzee.ng/admin/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>

}

@section Scripts2 {
    <script>
        $(function () {
            $('#example1').DataTable()
            $('#example2').DataTable({
                'paging': true,
                'lengthChange': false,
                'searching': false,
                'ordering': true,
                'info': true,
                'autoWidth': false
            })
        })
    </script>
}


