@model Exwhyzee.ESS.Models.Profile.StudentModel

    @{
        ViewBag.Title = "Index";
    }

    <style>
        .alert > p + p {
            margin-top: 0px;
            line-height: 1.02857143;
            color: #ffffff !important;
        }

        .alert button {
            color: red;
            background-color: transparent;
            border: none;
        }
    </style>

    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">My Profile</h3>

                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div>
                </div>
                @if (TempData["msg"] != null)
                {
                    <div class="alert alert-warning">
                        <strong>Note!</strong> @TempData["msg"]
                    </div>
                }
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="box-body box-profile" style="border:1px solid #0094ff;">
                                @if (Model.Picture != null)
                                {
                                    <img class="profile-user-img img-responsive img-circle" src="@Url.Content(Model.Picture)" alt="User profile picture">


                                }
                                else
                                {
                                    <p class="profile-user-img img-responsive img-circle">Update profile to view profile image</p>
                                }
                                <h3 class="profile-username text-center">@Model.SurName @Model.FirstName @Model.OtherName </h3>
                                <h4 class="profile-username text-center"> Student </h4>
                                <!-- /.box-header -->
                                <div class="box-body">
                                    <strong><i class="fa fa-address-book margin-r-5"></i> About Me</strong>

                                    <p class="text-muted">
                                        @Model
                                    </p>
                                    <hr style="margin:0px;">

                                    <strong><i class="fa fa-address-book margin-r-5"></i> About Me</strong>

                                    <p class="text-muted">
                                        @Model
                                    </p>
                                    <hr style="margin:0px;">
                                    <strong><i class="fa fa-address-book margin-r-5"></i> Email</strong>

                                    <p class="text-muted">
                                        @Model.Email
                                    </p>
                                    <hr style="margin:0px;">
                                    <strong><i class="fa fa-address-book margin-r-5"></i> Phone</strong>

                                    <p class="text-muted">
                                        @Model.PhoneNumber
                                    </p>
                                    <hr style="margin:0px;">
                                    <strong><i class="fa fa-address-book margin-r-5"></i> Class</strong>

                                    <p class="text-muted">
                                        @Model.ClassLevel.Name
                                    </p>


                                </div>

                            </div>
                        </div>


                    </div>
                    <!-- /.row -->
                </div>
            </div>
        </div>
    </div>