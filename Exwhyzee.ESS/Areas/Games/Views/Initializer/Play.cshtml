@model Exwhyzee.ESS.Models.Entities.Game

@{
    ViewBag.Title = "Play";

    if (User.IsInRole("Teacher"))
    {
        Layout = "~/Views/Shared/_Dashboard.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_GameLayout.cshtml";
    }
    }

<!-- TO DO List -->
<div class="box box-primary">
    <div class="box-header">
        <i class="fa fa-gamepad"></i>

        <h3 class="box-title">@Model.Title</h3>


    </div>
    <!-- /.box-header -->
    <div class="box-body">
        @Html.Raw(Model.IframLink)
    </div>
    <!-- /.box-body -->
    <div class="box-footer clearfix no-border">
        <h5>Description</h5>
        <p style="text-align:justify;">@Html.Raw(Model.Description)</p>

        <h5>Instruction</h5>
        <p style="text-align:justify;">@Html.Raw(Model.Instruction)</p>
    </div>
</div>
<!-- /.box -->
