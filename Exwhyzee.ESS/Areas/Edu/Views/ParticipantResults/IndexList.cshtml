@model IEnumerable<Exwhyzee.ESS.Models.Entities.ParticipantResult>

@{
    ViewBag.Title = "Index";
}



<div class="row">
    <div class="col-xs-12">
        <div class="box" style="padding:7px;">
            <div class="box-header" style="margin-bottom:15px;">
                <h3 class="box-title"><i class="fa fa-fw fa-file-text-o"></i> Participant Result</h3>


                @if (TempData["success"] != null)
                {
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <h4><i class="icon fa fa-ban"></i> Alert!</h4>
                        @TempData["success"]
                    </div>
                }
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table id="example1" class="table table-bordered table-hover" border="1">

                    <thead>
                        <tr>
                            <th>S/N</th>
                            <th>
                                @Html.DisplayNameFor(model => model.Participant.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Recharged)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Won)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Won)
                            </th>

                            <th></th>
                        </tr>

                    </thead>
                    <tbody>
                        @{
                            int sno = 0;
                        }
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @{ sno++; }
                                @sno
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Participant.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Recharged)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Won)
                            </td>
                            <td>
                                @if (item.Q1 == true)
                                {
                                    <img src="~/Content/img/good.png" style="width:50px;height:50px;" />
                                }
                                else
                                {
                                     <img src="~/Content/img/bad.png" style="width:50px;height:50px;" />

                                }
                                &nbsp;
                                &nbsp;
                                &nbsp;
                                @if (item.Q2 == true)
                                {
                                    <img src="~/Content/img/good.png" style="width:50px;height:50px;" />
                                }
                                else
                                {
                                     <img src="~/Content/img/bad.png" style="width:50px;height:50px;" />

                                }
                                &nbsp;
                                &nbsp;
                                &nbsp;
                                @if (item.Q3 == true)
                                {
                                    <img src="~/Content/img/good.png" style="width:50px;height:50px;" />
                                }
                                else
                                {
                                     <img src="~/Content/img/bad.png" style="width:50px;height:50px;" />

                                }
                                &nbsp;
                                &nbsp;
                                &nbsp;
                                @if (item.Q4 == true)
                                {
                                    <img src="~/Content/img/good.png" style="width:50px;height:50px;" />
                                }
                                else
                                {
                                     <img src="~/Content/img/bad.png" style="width:50px;height:50px;" />

                                }
                                &nbsp;
                                &nbsp;
                                &nbsp;
                                @if (item.Q5 == true)
                                {
                                    <img src="~/Content/img/good.png" style="width:50px;height:50px;" />
                                }
                                else
                                {
                                     <img src="~/Content/img/bad.png" style="width:50px;height:50px;" />

                                }
                                &nbsp;
                                &nbsp;
                                &nbsp;

                                <br />
                             
                                </td>

                                <td>

                                    <div class="dropdown">
                                        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                                            Action
                                            <span class="caret"></span>
                                        </button>
                                        <ul class="dropdown-menu">


                                            <li class="text-color-warning">@Html.ActionLink("Edit", "Edit", new { id = item.Id }, null)</li>


                                        </ul>
                                    </div>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>




@section Style {

    <link rel="stylesheet" href="http://exwhyzee.ng/libraries/admin/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">
}

@section Scripts {
    <!-- DataTables -->
    <script src="http://exwhyzee.ng/libraries/admin/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="http://exwhyzee.ng/libraries/admin/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>

}

@section Scripts2 {
    <script>
        $(function () {
            $('#example1').DataTable()
            $('#example2').DataTable({
                'paging': true,
                'lengthChange': false,
                'searching': false,
                'ordering': true,
                'info': true,
                'autoWidth': false
            })
        })
    </script>
}


