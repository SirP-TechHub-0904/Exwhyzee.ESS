@model IEnumerable<Exwhyzee.ESS.Models.Entities.ClassLevel>

@{
    ViewBag.Title = "ClassIndex";
}

<main id="main">
    <!-- heading banner -->
    <header class="heading-banner text-white bgCover" style="background-image: url(../../Content/img/for-web1.jpg);">
        <div class="container holder">
            <div class="align">
                <h1>Classes</h1>
            </div>
        </div>
    </header>
    <!-- breadcrumb nav -->
    <nav class="breadcrumb-nav">
        <div class="container">
            <!-- breadcrumb -->
            <ol class="breadcrumb">
                <li><a href="/">Home</a></li>
                <li><a href="#">Classes</a></li>

            </ol>
        </div>
    </nav>
    <!-- checkout block -->
    <section class="popular-posts-block container">
        <header class="popular-posts-head">
            <h2 class="popular-head-heading">Class Tutorials</h2>
        </header>
        <div class="row">
            @foreach (var item in Model)
            {


            <div class="col-md-4">

                <div class="panel panel-primary" style="box-shadow:2px 2px 2px #135ba8;">
                    <div class="panel-heading">
                        @item.Name
                    </div>
                    <div class="panel-body">
                        <h3>@item.Subjects.Count() Subjects</h3>
                    </div>
                    <div class="panel-footer">
                       
                        @if (item.SchoolType == Exwhyzee.ESS.Models.Entities.School.KindergartenAndNursery)
                        {
                            @Html.ActionLink("Kindergarten", "SubjectIndex", "Tutor", new { enumm = 1, fgc = "Kindergarten" }, new { @class = "btn btn-primary", style = "width:100%;" })

                        }
                      
                        else if (item.SchoolType == Exwhyzee.ESS.Models.Entities.School.Primary)
                        {
                            @Html.ActionLink("Primary", "SubjectIndex", "Tutor", new { enumm = 3, fgc = "Primary" }, new { @class = "btn btn-primary", style = "width:100%;" })

                        }
                        else if (item.SchoolType == Exwhyzee.ESS.Models.Entities.School.Secondary)
                        {
                            @Html.ActionLink("Secondary", "SubjectIndex", "Tutor", new { enumm = 4, fgc = "Secondary" }, new { @class = "btn btn-primary", style = "width:100%;" })

                        }
                        else if (item.SchoolType == Exwhyzee.ESS.Models.Entities.School.Motivation)
                        {
                            @Html.ActionLink("High Institution", "SubjectIndex", "Tutor", new { enumm = 5, fgc = "High Institution" }, new { @class = "btn btn-primary", style = "width:100%;" })

                        }
                    </div>
                </div>
            </div>
            }


        </div>
    </section>
</main>