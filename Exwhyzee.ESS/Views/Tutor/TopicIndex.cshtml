@model PagedList.IPagedList<Exwhyzee.ESS.Models.Entities.Topic>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" />
@{
    ViewBag.Title = "TopicIndex";
}

<main id="main">
    <!-- heading banner -->
    <header class="heading-banner text-white bgCover" style="background-image: url('../../Content/img/for-web1.jpg');">
        <div class="container holder">
            <div class="align">
                <h1>Tutorials and class video</h1>
            </div>
        </div>
    </header>
    <!-- breadcrumb nav -->
    <nav class="breadcrumb-nav">
        <div class="container">
            <!-- breadcrumb -->
            <ol class="breadcrumb">
                <li><a href="/">Home</a></li>
                <li><a href="#">Tutorials and class video</a></li>

            </ol>
        </div>
    </nav>
    <!-- checkout block -->
    <section class="popular-posts-block container">
        <header class="popular-posts-head">
            <h2 class="popular-head-heading">Most Popular Topics</h2>
        </header>
        <div class="row">
            @foreach (var item in Model)
            {


                <div class="col-md-4">
                    <article class="popular-post">
                        <div class="aligncenter">
                            <img src="~/Uploads/@item.VideoCover" alt="image description">
                        </div>
                        <div>
                            <strong class="bg-primary text-white font-lato text-uppercase price-tag">Free</strong>
                        </div>
                        <h3 class="post-heading" style="margin-bottom:7px !important;"><a href="@Url.Action("Details", "Tutor", new { id = item.Id, title = item.Title })" tabindex="0">@item.Title</a></h3>
                        <div class="post-author" style="margin-bottom:3px !important;">


                            <h4 class="author-heading"><a href="@Url.Action("Details", "Tutor", new { id = item.Id, title = item.Title })" tabindex="0">Subject: @item.Subject.Name</a></h4>
                        </div>
                        <div class="post-author" style="margin-bottom:3px !important;">


                            <h4 class="author-heading"><a href="@Url.Action("Details", "Tutor", new { id = item.Id, title = item.Title })" tabindex="0">Class: @item.Subject.ClassLevel.Name</a></h4>
                        </div>
                        <footer class="post-foot gutter-reset">
                            <ul class="list-unstyled post-statuses-list">
                                <li>
                                    <a href="#" tabindex="0">

                                        <strong class="text fw-normal">98</strong>
                                        <span class="no-shrink">Views</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#" tabindex="0">
                                        <span class="fa icn no-shrink fa-comments"><span class="sr-only">comments</span></span>
                                        <strong class="text fw-normal">10</strong>
                                    </a>
                                </li>
                            </ul>
                            <ul class="star-rating list-unstyled">
                                <li><span class="fa fa-star"><span class="sr-only">star</span></span></li>
                                <li><span class="fa fa-star"><span class="sr-only">star</span></span></li>
                                <li><span class="fa fa-star"><span class="sr-only">star</span></span></li>
                                <li><span class="fa fa-star"><span class="sr-only">star</span></span></li>
                                <li><span class="fa fa-star"><span class="sr-only">star</span></span></li>
                            </ul>
                        </footer>
                    </article>
                </div>
            }


        </div>
        <div class="container text-center page" style="margin-left:auto;margin-right:auto;">

            <p>Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount</p>

            @Html.PagedListPager(Model, page => Url.Action("Index",
new { page }))
        </div>
    </section>
</main>